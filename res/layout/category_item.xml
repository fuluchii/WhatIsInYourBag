<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <ImageView android:layout_width="60dp"
               android:layout_height="60dp"
               android:layout_alignParentLeft="true"
            android:id="@+id/category_icon"/>
    <TextView android:layout_width="0dp" android:layout_height="fill_parent"
            android:id="@+id/category_name"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/category_icon" android:textSize="35dp" android:textIsSelectable="true"
            android:textColor="#ffffff" android:gravity="center_vertical|right"/>
</RelativeLayout>

